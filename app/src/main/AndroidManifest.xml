<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.madewithlove.daybalance">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.madewithlove.daybalance.CashApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!-- Disable Advertising ID collection -->
        <meta-data android:name="google_analytics_adid_collection_enabled" android:value="false"/>

        <!-- Disable SSAID collection -->
        <meta-data android:name="google_analytics_ssaid_collection_enabled" android:value="false"/>

        <activity android:name="com.madewithlove.daybalance.ui.activities.MainActivity" android:launchMode="singleTask"/>

        <activity android:name="com.madewithlove.daybalance.ui.activities.NewTransactionActivity"/>

        <activity android:name="com.madewithlove.daybalance.ui.activities.DayTransactionsActivity"/>

        <activity android:name="com.madewithlove.daybalance.ui.activities.DetailedTransactionActivity"/>

        <activity android:name="com.madewithlove.daybalance.ui.activities.SettingsActivity"/>

        <activity android:name="com.madewithlove.daybalance.ui.activities.DebugSettingsActivity"/>

        <activity android:name="com.madewithlove.daybalance.ui.activities.WebPageActivity"/>

        <activity android:name="com.madewithlove.daybalance.ui.activities.StatisticsActivity"/>

        <activity android:name="com.madewithlove.daybalance.ui.activities.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver android:name="com.madewithlove.daybalance.helpers.push.BootReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name="com.madewithlove.daybalance.helpers.push.AlarmReceiver" android:enabled="true"/>
    </application>

</manifest>