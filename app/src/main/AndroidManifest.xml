<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.alex_aladdin.cash">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
            android:name=".CashApp"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <!-- Disable Advertising ID collection -->
        <meta-data android:name="google_analytics_adid_collection_enabled" android:value="false" />

        <!-- Disable SSAID collection -->
        <meta-data android:name="google_analytics_ssaid_collection_enabled" android:value="false" />

        <activity android:name=".ui.activities.MainActivity" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.activities.NewTransactionActivity"/>

        <activity android:name=".ui.activities.DayTransactionsActivity"/>

        <activity android:name=".ui.activities.DetailedTransactionActivity"/>

        <activity android:name=".ui.activities.SettingsActivity"/>

        <activity android:name=".ui.activities.DebugSettingsActivity"/>

        <receiver android:name=".helpers.push.BootReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".helpers.push.AlarmReceiver" android:enabled="true"/>
    </application>

</manifest>