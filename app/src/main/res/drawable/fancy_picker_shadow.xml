<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                    android:angle="270"
                    android:startColor="@color/dark"
                    android:centerColor="@color/dark_transparent"
                    android:endColor="@color/dark_transparent"
                    android:centerY="0.5" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                    android:angle="90"
                    android:startColor="@color/dark"
                    android:centerColor="@color/dark_transparent"
                    android:endColor="@color/dark_transparent"
                    android:centerY="0.5" />
        </shape>
    </item>
</layer-list>